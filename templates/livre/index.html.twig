{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1>La liste des livres ajoutés</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Identification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.identification }}</td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_livre_show', {'id': livre.id}) }}'">afficher</button>
                    <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_livre_edit', {'id': livre.id}) }}'">modifier</button>
                </td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas de livres enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_livre_new') }}'">ajouter un nouveau livre</button>
</td>
{% endblock %}
