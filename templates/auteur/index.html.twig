{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
    <h1>Auteurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Dob</th>
                <th>Nationalite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.dob ? auteur.dob|date('Y-m-d') : '' }}</td>
                <td>{{ auteur.nationalite }}</td>
                <td>
                    
                    <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_auteur_show', {'id': auteur.id}) }}'">Afficher</button>
                    <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_auteur_edit', {'id': auteur.id}) }}'">Ajouter</button>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas d'auteurs enregistr√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_auteur_new') }}'">Ajouter un nouvel auteur</button>

{% endblock %}
